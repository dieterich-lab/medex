{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "target": "es6",
    "moduleResolution": "node",
    //"strict": true,
    "esModuleInterop": false,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    "./src_ts/**/*"
  ]
}